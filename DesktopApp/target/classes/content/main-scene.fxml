<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.scene.MainSceneController">
    <children>
        <GridPane layoutX="150.0" layoutY="50.0" prefHeight="300.0" prefWidth="300.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="field00" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" />
                <Button fx:id="field10" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="1" />
                <Button fx:id="field20" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="2" />
                <Button fx:id="field01" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" GridPane.rowIndex="1" />
                <Button fx:id="field11" mnemonicParsing="false" onAction="#selectButton" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button fx:id="field21" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Button fx:id="field02" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" GridPane.rowIndex="2" />
                <Button fx:id="field12" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button fx:id="field22" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            </children>
        </GridPane>
        <MenuBar layoutY="2.0" prefHeight="27.0" prefWidth="394.0">
            <menus>
                <Menu mnemonicParsing="false" text="Game">
                    <items>
                        <MenuItem fx:id="start" mnemonicParsing="false" onAction="#startGame" text="Start" />
                        <MenuItem fx:id="restart" mnemonicParsing="false" onAction="#restartGame" text="Restart" />
                        <MenuItem fx:id="surrender" mnemonicParsing="false" onAction="#surrenderGame" text="Surrender" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Opponent">
                    <items>
                        <RadioMenuItem fx:id="TonyRandomOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="TonyRandomOpponent">
                            <toggleGroup>
                                <ToggleGroup fx:id="opponents" />
                            </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem fx:id="RandomOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="RandomOpponent" toggleGroup="$opponents" />
                        <RadioMenuItem fx:id="QuandaryOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="QuandaryOpponent" toggleGroup="$opponents" />
                        <RadioMenuItem fx:id="MinimaxOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="MinimaxOpponent" toggleGroup="$opponents" />
                        <RadioMenuItem fx:id="NoobOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="NoobOpponent" toggleGroup="$opponents" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Settings">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Theme" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Tutorial" />
                        <MenuItem mnemonicParsing="false" text="About the Game" />
                        <Menu mnemonicParsing="false" text="History">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Save" />
                                <MenuItem mnemonicParsing="false" text="Print" />
                            </items>
                        </Menu>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </children>

</AnchorPane>
