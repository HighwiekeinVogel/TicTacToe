<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.scene.MainSceneController">
    <children>
        <MenuBar layoutY="2.0" prefHeight="27.0" prefWidth="600.0">
            <menus>
                <Menu mnemonicParsing="false" text="Opponent">
                    <items>
                        <RadioMenuItem fx:id="TonyRandomOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="TonyRandomOpponent">
                            <toggleGroup>
                                <ToggleGroup fx:id="opponents" />
                            </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem fx:id="RandomOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="RandomOpponent" toggleGroup="$opponents" />
                        <RadioMenuItem fx:id="QuandaryOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="QuandaryOpponent" toggleGroup="$opponents" />
                        <RadioMenuItem fx:id="MinimaxOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="MinimaxOpponent" toggleGroup="$opponents" />
                        <RadioMenuItem fx:id="NoobOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="NoobOpponent" toggleGroup="$opponents" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Settings">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Theme" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Tutorial" />
                        <MenuItem mnemonicParsing="false" text="About the Game" />
                        <Menu mnemonicParsing="false" text="History">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Save" />
                                <MenuItem mnemonicParsing="false" text="Print" />
                            </items>
                        </Menu>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
      <Button layoutX="274.0" layoutY="188.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="70.0" text="Play">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label layoutX="14.0" layoutY="29.0" text="Highscore: ">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="482.0" layoutY="48.0" text="Games" />
      <ListView layoutX="401.0" layoutY="70.0" prefHeight="330.0" prefWidth="200.0" />
    </children>

</AnchorPane>
