<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.scene.MainSceneController">
    <children>
        <MenuBar layoutY="2.0" prefHeight="27.0" prefWidth="600.0">
            <menus>
                <Menu mnemonicParsing="false" text="Opponent">
                    <items>
                        <RadioMenuItem fx:id="TonyRandomOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="TonyRandomOpponent">
                            <toggleGroup>
                                <ToggleGroup fx:id="opponents" />
                            </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem fx:id="RandomOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="RandomOpponent" toggleGroup="$opponents" />
                        <RadioMenuItem fx:id="QuandaryOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="QuandaryOpponent" toggleGroup="$opponents" />
                        <RadioMenuItem fx:id="MinimaxOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="MinimaxOpponent" toggleGroup="$opponents" />
                        <RadioMenuItem fx:id="NoobOpponent" mnemonicParsing="false" onAction="#selectOpponent" text="NoobOpponent" toggleGroup="$opponents" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Settings">
                    <items>
                  <Menu mnemonicParsing="false" text="Theme">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Dark" />
                        <MenuItem mnemonicParsing="false" text="Light" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Profil">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Sign up" />
                      <MenuItem mnemonicParsing="false" text="Sign In" />
                        <MenuItem mnemonicParsing="false" text="Sign out" />
                    </items>
                  </Menu>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Tutorial" />
                        <MenuItem fx:id="itemAbout" mnemonicParsing="false" onAction="#showInfo" text="About the Game" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
      <Button fx:id="play" layoutX="250.0" layoutY="165.0" mnemonicParsing="false" onAction="#playGame" prefHeight="70.0" prefWidth="100.0" text="Play">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label layoutX="14.0" layoutY="30.0" prefHeight="27.0" prefWidth="100.0" text="Total Wins:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="482.0" layoutY="48.0" text="Games" />
      <ListView fx:id="listGames" layoutX="401.0" layoutY="70.0" prefHeight="330.0" prefWidth="200.0" />
      <Label layoutX="14.0" layoutY="70.0" prefHeight="27.0" prefWidth="107.0" text="Total Games:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="lblTotalWins" layoutX="121.0" layoutY="30.0" prefHeight="27.0" prefWidth="100.0">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="lblTotalGames" layoutX="121.0" layoutY="70.0" prefHeight="27.0" prefWidth="100.0">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="18.0" layoutY="110.0" prefHeight="27.0" prefWidth="100.0" text="Total Losses:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="18.0" layoutY="146.0" prefHeight="27.0" prefWidth="100.0" text="K/D:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="lblTotalLosses" layoutX="121.0" layoutY="110.0" prefHeight="27.0" prefWidth="100.0">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="lblKD" layoutX="121.0" layoutY="146.0" prefHeight="27.0" prefWidth="100.0">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
    </children>

</AnchorPane>
